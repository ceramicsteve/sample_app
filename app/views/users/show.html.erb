<% provide(:title, @user.name) %>
<div class="row">
  <aside class=""span4">
  <section>
<h1>
  <%= gravatar_for @user, size: 100%>
  <!--gravatar_for(email, size: " "is equal to :size => " " -->
  <%= @user.name %>
</h1>
  </section>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
        <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
